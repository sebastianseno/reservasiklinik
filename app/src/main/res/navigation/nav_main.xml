<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment"
    android:id="@+id/nav_main">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dodolife.rapidnews.ui.home.HomeFragment"
        android:label="Pilih Kategori"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_newsListFragment"
            app:destination="@id/newsListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_homeFragment_to_doctorListFragment"
            app:destination="@id/doctorListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.dodolife.rapidnews.ui.news.NewsListFragment"
        android:label="Pilih Kategori"
        tools:layout="@layout/fragment_news_list" >
        <action
            android:id="@+id/action_homeFragment_to_webView"
            app:destination="@id/webView" />
    </fragment>

    <activity
        android:id="@+id/webView"
        android:name="com.dodolife.rapidnews.extensions.WebViewActivity"
        tools:layout="@layout/activity_web_view" >
        <argument
            android:name="url"
            app:argType="string"/>
    </activity>

    <fragment
        android:id="@+id/doctorListFragment"
        android:name="com.dodolife.rapidnews.ui.doctor.DoctorListFragment"
        tools:layout="@layout/fragment_doctor_list" >

    </fragment>

</navigation>