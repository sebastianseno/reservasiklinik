<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_dummy" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_black_overlay" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="New York state is ranked the WORST in the country for economic outlook as businesses begin to flee"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="08 Agustus 2020"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/sourceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="DailyMail"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="12dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/rubik"
        android:layout_marginEnd="12dp"
        android:text="Name: Jakarta - Jintan hitam atau habbatussauda dikenal sebagai tumbuhan yang kaya manfaat bagi kesehatan. Selain dapat menguatkan sistem imun dan mengobati jerawat, minyak jintan hitam juga bisa menurunkan berat badan. Sebuah studi dalam " />

</LinearLayout>